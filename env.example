# Database Configuration
# IMPORTANT: Change these values to secure passwords before running in production!
POSTGRES_USER=police
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_SECURE_PASSWORD
POSTGRES_DB=policepatrol
# For Docker: use 'db' as hostname, for local: use 'localhost'
DATABASE_URL=postgresql+psycopg2://police:CHANGE_THIS_TO_A_SECURE_PASSWORD@db:5432/policepatrol

# Redis Configuration
# For Docker: use 'redis' as hostname, for local: use 'localhost'
REDIS_URL=redis://redis:6379/0

# Application Configuration
ENVIRONMENT=development
API_V1_PREFIX=/api/v1

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:8000/api/v1

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Risk Forecasting Parameters
DEFAULT_GRID_SIZE_M=100.0
KDE_MIN_BANDWIDTH_M=50.0
KDE_MAX_BANDWIDTH_M=500.0
DEFAULT_RISK_THRESHOLD=0.7

# ML Spatio-Temporal Forecast Parameters
ML_FORECAST_ENABLED=true
ML_MODEL_PATH=ml/models/spatiotemporal_model.pkl
ML_TIME_BIN_HOURS=6
ML_BANDWIDTH_M=450.0
ML_HISTORY_DAYS=30
ML_REGION_CLUSTERS=4
ML_NEIGHBOR_K=6
ML_MIN_RISK_THRESHOLD=0.01

# Routing Parameters
DEFAULT_ROUTE_TIME_MINUTES=90
MAX_ROUTE_TIME_MINUTES=180
